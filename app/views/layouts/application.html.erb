<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvent</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% if @current_user %>
     <ul>
 	<li><%= link_to @current_user.name, user_path(@current_user.id) %></li>
  	<li><%= link_to 'Logout', session_path(1),
          method: :delete  %></li>
        <li><%= link_to 'View events', events_path %></li>
        <li><%= link_to 'Create an event', new_event_path %></li>
     </ul>
<% else %>
 <%= link_to 'Login', new_session_path %>
 <%= link_to 'Sign Up', new_user_path %>
<% end %>
<br>
    <%= yield %>

  </body>
</html>
