<%= form_with(model: @user, local: true) do |form| %>

    <div class="field">  
      <%= form.label :name %>        
      <%= form.text_field :name %>   
    </div>

    <div class="field">
      <%= form.label :username %>    
      <%= form.text_area :username %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
